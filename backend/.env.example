# ========================
# Configuration du serveur
# ========================
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:8080

# ========================
# Configuration de la base de données
# ========================
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=arch_excellence
DB_PORT=3306

# ========================
# Configuration JWT
# ========================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRE=30d
JWT_COOKIE_EXPIRES=30

# ========================
# Configuration des emails
# ========================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@archexcellence.ci

# ========================
# Configuration des fichiers
# ========================
MAX_FILE_SIZE=5242880  # 5MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpg,image/jpeg,image/png,application/pdf

# ========================
# Configuration de la génération de documents
# ========================
DOCUMENTS_PATH=./generated
TEMPLATES_PATH=./templates

# ========================
# Configuration des logs
# ========================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ERROR_LOG_FILE=./logs/error.log

# ========================
# Configuration des paiements (pour plus tard)
# ========================
PAYMENT_API_KEY=your_payment_api_key
PAYMENT_SECRET=your_payment_secret

# ========================
# Identifiants administrateur par défaut
# ========================
ADMIN_EMAIL=admin@archexcellence.ci
ADMIN_PASSWORD=Admin@123456
